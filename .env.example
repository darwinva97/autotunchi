# Database
DATABASE_URL="postgresql://user:password@localhost:5432/autotunchi?schema=public"

# NextAuth
AUTH_SECRET="your-auth-secret-generate-with-openssl-rand-base64-32"
AUTH_URL="http://localhost:3000"

# GitHub OAuth App
AUTH_GITHUB_ID="your-github-oauth-app-id"
AUTH_GITHUB_SECRET="your-github-oauth-app-secret"

# Encryption key for sensitive data (32 bytes base64)
ENCRYPTION_KEY="your-32-byte-encryption-key-base64"

# Kubernetes
KUBECONFIG="/path/to/kubeconfig"

# Pulumi - Self-hosted backend options:
# - Local filesystem: file://~/.pulumi-state
# - S3/MinIO: s3://bucket-name?endpoint=minio.local:9000&disableSSL=true&s3ForcePathStyle=true
# - Azure Blob: azblob://container-name
# - Google Cloud: gs://bucket-name
# Leave PULUMI_ACCESS_TOKEN empty for self-hosted backends
PULUMI_BACKEND_URL="file:///app/.pulumi-state"
PULUMI_ACCESS_TOKEN=""

# For S3/MinIO backend (only if using s3:// backend)
MINIO_ACCESS_KEY=""
MINIO_SECRET_KEY=""

# Container Registry - Self-hosted options:
# - Docker Registry: registry.local:5000
# - Harbor: harbor.local/library
# - K3S local: localhost:5000
REGISTRY_URL="registry.local:5000"
REGISTRY_USERNAME=""
REGISTRY_PASSWORD=""
# Set to "true" if registry uses HTTP (not HTTPS)
REGISTRY_INSECURE="true"

# Platform domain (for subdomains)
PLATFORM_DOMAIN="your-platform-domain.com"

# Ingress IP (for Cloudflare DNS)
INGRESS_IP=""

# Ingress class name (traefik for K3S default, nginx if you installed it)
INGRESS_CLASS="traefik"
